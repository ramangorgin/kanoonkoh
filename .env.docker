# --- Laravel general ---
APP_NAME=Kanoonkoh
APP_ENV=local
APP_KEY=base64:YOUR_APP_KEY   # اگر در فایل اصلی داری، همین رو کپی کن
APP_DEBUG=true
APP_URL=http://localhost

# --- Logging ---
LOG_CHANNEL=stack
LOG_LEVEL=debug

# --- Database ---
DB_CONNECTION=mysql
DB_HOST=db          # <=== اسم سرویس دیتابیس در docker-compose
DB_PORT=3306
DB_DATABASE=kanoonkoh
DB_USERNAME=appuser
DB_PASSWORD=apppass

# --- Caching / Sessions ---
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120

# --- Mail (مطابق فایل اصلی تو) ---
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# --- SMSIR credentials (که در فایل اصلی داری) ---
SMSIR_API_KEY=YourKeyHere
SMSIR_LINE_NUMBER=YourLineNumberHere

# --- APP custom keys (اگر داری) ---
JWT_SECRET=
